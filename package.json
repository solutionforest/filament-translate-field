{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npx tailwindcss -i resources/css/app.css -o resources/dist/filament-translate-fields.css --postcss --watch",
        "dev-auto": "npm run build && npm run copy && npx tailwindcss -i resources/css/app.css -o resources/dist/filament-translate-fields.css --postcss --watch",
        "build": "npx tailwindcss -i resources/css/app.css -o resources/dist/filament-translate-fields.css --postcss --minify",
        "build-with-purge": "npx tailwindcss -i resources/css/app.css -o resources/dist/filament-translate-fields.css --postcss --minify && npm run purge",
        "purge": "filament-purge -i resources/dist/filament-translate-fields.css -o resources/dist/filament-translate-fields.css -v 3.x"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/cli": "^4.1.11",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.26",
        "postcss-import": "^15.1.0",
        "postcss-nesting": "^13.0.2",
        "tailwindcss": "^4.1.11"
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.11"
    }
}
